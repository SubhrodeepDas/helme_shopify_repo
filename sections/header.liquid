<!-- header start -->
{% assign main_menu_linklist = linklists[section.settings.menu].links %}

<header class="site-header site-header__3">
  <div class="menu-area menu-area__3">
    <div class="container">
      <div class="row d-none d-xl-flex">
        <div class="col-xl-2 col-lg-2 d-none d-lg-block align-self-center">
          <div class="logo">
            <a href="#"><img
                class="logo-light"
                src="{{ 'hel-logo.png' | asset_url }}"
                width="200"
                height="200"
                alt=""></a>
          </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-5 align-self-center">
          <div class="main-menu main-menu__3">
            <nav>
              <ul id="menu-main-menu" class="menu">
                {% for link in main_menu_linklist %}

                  {% if link.links != blank %}

                    <li class="menu-item menu-item-type-custom menu-item-object-custom menu-item-has-children">
                      <a href="#">{{ link.title }}</a>
                      <ul class="sub-menu">
                        {% for childlink in link.links %}
                          <li>
                            <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    </li>
                  {% else %}

                    <li class="menu-item menu-item-type-post_type menu-item-object-page">
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>

                  {% endif %}


                {% endfor %}
              </ul>
            </nav>
          </div>
        </div>

        <div class="col-xl-1 col-lg-1 col-md-7 align-self-center">
          <div class="menu-area__right menu-area__right--3 d-flex justify-content-end align-items-center">
            <div class="wrapper d-flex justify-content-end align-items-center">
              <div class="dropdown">
                <a class="dropbtn">
                  <i class="far fa-user"></i>
                </a>
                <div class="dropdown-content">
                  <a
                    href="#"
                    class="create-account"
                    data-bs-toggle="modal"
                    data-bs-target="#exampleModal"
                    class="xoo-el-action-sc xoo-el-reg-tgr">Create Account</a>
                  <a
                    href="#"
                    class="login-account"
                    data-bs-toggle="modal"
                    data-bs-target="#exampleModal"
                    class="xoo-el-action-sc xoo-el-login-tgr">Login</a>
                </div>
              </div>


              <div class="cart cart-trigger item position-relative">
                <i class="fa fa-shopping-cart"></i>
                <span class="cart__count">
                  0</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row d-lg-flex d-xl-none">
        <div class="col-xl-9 col-lg-10 col-6">
          <div class="wrapper-for-lg d-flex align-items-center">
            <div class="logo d-xl-none d-lg-block">
              <a href="https://helme.com.au"><img
                  class="logo-light"
                  src="{{ 'hel-logo.png' | asset_url }}"
                  width="200"
                  height="200"
                  alt=""></a>
            </div>
            <div class="main-menu main-menu__3">
              <nav id="mobile-menu">
                <ul id="main_menu" class="menu">
                  {% for link in main_menu_linklist %}

                    {% if link.links != blank %}

                      <li class="menu-item menu-item-type-custom menu-item-object-custom menu-item-has-children">
                        <a href="#">{{ link.title }}</a>
                        <ul class="sub-menu">
                          {% for childlink in link.links %}
                            <li>
                              <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                      </li>
                    {% else %}

                      <li class="menu-item menu-item-type-post_type menu-item-object-page">
                        <a href="{{ link.url }}">{{ link.title }}</a>
                      </li>

                    {% endif %}


                  {% endfor %}
                </ul>
              </nav>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-lg-2 col-6 align-self-center">
          <div class="menu-area__right d-flex justify-content-end align-items-center">
            <div class="search">
              <div class="search__trigger item">
                <span class="close">
                  <i class="fa fa-times"></i>
                </span>
              </div>
            </div>
            <div class="hamburger-trigger item">
              <i class="fa fa-bars"></i>
            </div>
            <div class="dropdown">
              <a class="dropbtn">
                <i class="far fa-user"></i>
              </a>
              <div class="dropdown-content">
                <a
                  href="{{ routes.account.account_register_url }}"
                  class="create-account"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModal"
                  class="xoo-el-action-sc xoo-el-reg-tgr">Create Account</a>
                <a
                  href="{{ routes.account.account_login_url }}"
                  class="login-account"
                  data-bs-toggle="modal"
                  data-bs-target="#exampleModal"
                  href="#"
                  class="xoo-el-action-sc xoo-el-login-tgr">Login</a>
              </div>
            </div>
            <div class="cart cart-trigger item position-relative">
              <i class="fa fa-shopping-cart"></i>
              <span class="cart__count">0
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- header end -->

<!-- side info for mobile view -->
<aside class="side-info-wrapper mm-only">
  <nav>
    <div
      class="nav"
      id="nav-tab"
      role="tablist">
      <a
        class="nav-link active"
        id="menu-tab-1-tab"
        data-bs-toggle="tab"
        href="#menu-tab-1"
        role="tab"
        aria-controls="menu-tab-1"
        aria-selected="true">Menu</a>
      <a
        class="nav-link"
        id="menu-tab-2-tab"
        data-bs-toggle="tab"
        href="#menu-tab-2"
        role="tab"
        aria-controls="menu-tab-2"
        aria-selected="false">Info</a>
    </div>
  </nav>
  <div class="side-info__wrapper d-flex align-items-center justify-content-between">
    <div class="side-info__logo">
      <a href="https://helme.com.au"><img
          class="logo-light"
          src="{{ 'logo-color-1.png' | asset_url }}"
          width="200"
          height="200"
          alt="logo-2"></a>
    </div>
    <div class="side-info__close">
      <a href="javascript:void(0);">
        <i class="fa fa-times"></i>
      </a>
    </div>
  </div>
  <div class="tab-content" id="nav-tabContent">
    <div
      class="tab-pane fade show active"
      id="menu-tab-1"
      role="tabpanel"
      aria-labelledby="menu-tab-1-tab">
      <div class="mobile-menu"></div>
    </div>
    <div
      class="tab-pane fade"
      id="menu-tab-2"
      role="tabpanel"
      aria-labelledby="menu-tab-2-tab">
      <div class="side-info">
        <div class="side-info__content mb-35">
          <p>
            <p>Helme is a manufacturer and supplier of innovative clamping products. We provide our customers with simplified, fit-for-purpose, and sustainable clamping solutions. <br/> <br/>
              Helme is proudly Australian owned and operated. <br/> <br/>
              100% Carbon Neutral Shipping.</p>
          </p>
        </div>
      <!-- <div class="contact__info--wrapper mt-15">
     <h4 class="title mb-10">Email</h4>
           <ul class="contact__info list-unstyled"> -->
      <!-- </ul>
    </div> -->

      </div>
    </div>
  </div>
</aside>


<!-- cart list -->
<aside class="cart-bar-wrapper ">
  <div class="cart-bar__close">
    <a class="d-flex align-items-center justify-content-center" href="javascript:void(0);">
      <i class="fa fa-times"></i>
    </a>
  </div>
  <div class="cart-bar">

    <div class="text-center">
      <span>Your cart is empty</span>
      <a class="site-btn" href="{{ routes.cart_url }}">Return to Store</a>
    </div>

  </div>

</aside>


{% schema %}
  {
    "name": "Navigation Menu",
    "settings": [
      {
        "type": "text",
        "id": "mobile_menu_title",
        "label": "Title for mobile menu",
        "default": "Menu",
        "info": "This title will be displayed on the mobile menu"
      }, {
        "type": "link_list",
        "id": "menu",
        "label": "Header menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}